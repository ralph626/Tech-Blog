<div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input type="text" class="form-control" id="titleInput" placeholder="Dear Penthouse...">
</div>
<div class="form-group">
    <label for="exampleFormControlTextarea1">Write your post here</label>
    <textarea class="form-control" id="blogInput" rows="5"></textarea>
</div>

<button type="button" id="clearPost" class="mt-3 btn btn-danger shadow">Discard</button>
<button type="button" id="submitPost" class="mt-3 btn btn-success shadow">Submit</button>

<script>
    $("#submitPost").click(() => {
        const title = $("#titleInput").val().trim()
        const content = $("#blogInput").val().trim();
        if (!title.length || !content.length) {
            alert("you gotta type something in both text boxes!")
        } else {
            axios.post("/post", { title, content, userId: currentUser.id })
                .then(data => {
                    alert("post created!")
                })
                .catch(err => console.log(err))
        }
    })
</script>